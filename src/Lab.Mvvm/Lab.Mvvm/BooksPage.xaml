<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="Lab.Mvvm.BooksPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:Lab.Mvvm"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
      mc:Ignorable="d">

    <Grid x:Name="ContentArea"
          Padding="10"
          RowSpacing="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Style="{StaticResource TitleLargeTextBlockStyle}"
                   Text="Books" />

        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <ComboBox x:Name="genreFilterComboBox"
                      Grid.Row="1"
                      PlaceholderText="Filter Genre"
                      SelectionChanged="GenreFilterComboBox_SelectionChanged" />
            <Button x:Name="clearGenreFilterButton"
                    Click="clearGenreFilterButton_Click"
                    Content="Clear" />
        </StackPanel>

        <GridView x:Name="booksGridView" Grid.Row="2">
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="local:Book">
                    <Grid Width="300" Height="200">
                        <Image Source="{x:Bind ImageUrl}" />
                        <Border Padding="5"
                                VerticalAlignment="Bottom"
                                Background="#ccffffff">
                            <TextBlock Text="{x:Bind Title}" />
                        </Border>
                    </Grid>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Grid>
</Page>
